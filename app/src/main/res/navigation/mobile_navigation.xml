<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.chaqmoq.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/incoming_call"
        android:name="com.example.chaqmoq.ui.incomingCall.IncomingCallFragment"
        android:label="incoming_call"
        tools:layout="@layout/incoming_call" />

    <fragment
        android:id="@+id/nav_call"
        android:name="com.example.chaqmoq.ui.callWindow.CallWindowFragment"
        android:label="call window"
        tools:layout="@layout/call_window">
    </fragment>

    <fragment
        android:id="@+id/target_user"
        android:name="com.example.chaqmoq.ui.targetUser.TargetUserFragment"
        android:label="Target User"
        tools:layout="@layout/target_user">
        <action
            android:id="@+id/to_nav_call"
            app:destination="@+id/nav_call">
            <argument
                android:name="incoming"
                app:argType="boolean" />
            <argument
                android:name="callType"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/test_fragment"
        android:name="com.example.chaqmoq.ui.testFragment.TestFragment"
        android:label="Test Fragment"
        tools:layout="@layout/test_fragment" />
    <activity
        android:id="@+id/login_activity"
        android:name="com.example.chaqmoq.LoginActivity"
        android:label="Login"
        tools:layout="@layout/activity_login" />
</navigation>